{
  "name": "sample-express-app",
  "version": "1.0.0",
  "description": "Sample express app that includes (TS, swagger, schema validation, routing &amp; middlewares)",
  "scripts": {
    "test": "jest",
    "start": "ts-node src/main.ts",
    "build": "tsc",
    "serve": "node dist/main.js",
    "dev": "nodemon src/main.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check src/**.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\" --max-warnings=0"
  },
  "author": "",
  "nodemonConfig": {
    "ignore": [
      "swagger-output.json"
    ]
  },
  "license": "ISC",
  "dependencies": {
    "@google-cloud/logging": "^11.1.0",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "^2.3.0",
    "@google-cloud/trace-agent": "^8.0.0",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.23.8",
    "zone.js": "^0.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "zod-openapi": "^2.19.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "main.ts"
    ],
    "testEnvironment": "node"
  }
}
